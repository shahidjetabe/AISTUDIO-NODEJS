{
	"name": "boilerplate",
	"version": "1.0.0",
	"description": "boilerplate code in node and typescript",
	"scripts": {
		"build": "tsc && tsc-alias -p tsconfig.json -s ./src",
		"start:fast": "NODE_ENV=production node ./dist/bin/index.js",
		"stage:fast": "NODE_ENV=staging node ./dist/bin/index.js",
		"test:fast": "NODE_ENV=testing node ./dist/bin/index.js",
		"dev:fast": "NODE_ENV=development nodemon ./dist/bin/index.js",
		"local:fast": "npm run build && NODE_ENV=local node ./dist/bin/index.js",
		"start": "NODE_ENV=local ts-node -r tsconfig-paths/register ./src/bin/index.ts --fast --transpile-only",
		"stage": "NODE_ENV=staging ts-node -r tsconfig-paths/register ./src/bin/index.ts --fast --transpile-only",
		"test": "NODE_ENV=testing ts-node -r tsconfig-paths/register ./src/bin/index.ts --fast --transpile-only",
		"dev": "NODE_ENV=development nodemon -r tsconfig-paths/register ./src/bin/index.ts --fast --transpile-only",
		"local:dev": "NODE_ENV=local ts-node -r tsconfig-paths/register ./src/bin/index.ts --fast --transpile-only",
		"local": "NODE_ENV=local ts-node-dev --poll -r tsconfig-paths/register ./src/bin/index.ts",
		"jest": "NODE_ENV=test jest",
		"test:watch": "NODE_ENV=test jest --watchAll",
		"lint": "eslint '**/*.ts' --quiet"
	},
	"engines": {
		"node": ">=16 <20"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"private": false,
	"devDependencies": {
		"@babel/preset-typescript": "^7.21.5",
		"@types/amqplib": "^0.10.1",
		"@types/bcryptjs": "^2.4.2",
		"@types/compression": "^1.7.2",
		"@types/cors": "^2.8.13",
		"@types/express": "^4.17.17",
		"@types/jest": "^29.5.1",
		"@types/jsonwebtoken": "^9.0.1",
		"@types/multer": "^1.4.7",
		"@types/node": "^18.15.11",
		"@types/redis-mock": "^0.17.1",
		"@types/supertest": "^2.0.12",
		"@types/swagger-jsdoc": "^6.0.1",
		"@types/swagger-ui-dist": "^3.30.1",
		"@types/swagger-ui-express": "^4.1.3",
		"@typescript-eslint/eslint-plugin": "^5.58.0",
		"eslint": "^8.38.0",
		"eslint-config-standard-with-typescript": "^34.0.1",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-n": "^15.7.0",
		"eslint-plugin-promise": "^6.1.1",
		"ioredis": "^5.3.2",
		"jest": "^29.5.0",
		"swagger-jsdoc": "^6.2.8",
		"swagger-ui-dist": "^4.18.3",
		"ts-jest": "^29.1.0",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.0.4"
	},
	"dependencies": {
		"@types/cookie-parser": "^1.4.3",
		"amqplib": "^0.10.3",
		"bcryptjs": "^2.4.3",
		"compression": "^1.7.4",
		"cookie-parser": "^1.4.6",
		"cors": "^2.8.5",
		"dotenv": "^16.0.3",
		"express": "^4.18.2",
		"helmet": "^6.1.5",
		"joi": "^17.9.1",
		"jsonwebtoken": "^9.0.0",
		"mongoose": "^7.0.3",
		"multer": "^1.4.5-lts.1",
		"prom-client": "^14.2.0",
		"redis": "^4.6.5",
		"swagger-ui-express": "^4.6.2",
		"ts-node": "^10.9.1",
		"ts-node-dev": "^2.0.0",
		"tsc-alias": "^1.8.6",
		"winston": "^3.8.2"
	}
}
